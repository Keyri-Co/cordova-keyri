<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android"
  id="cordova-keyri" version="0.0.1">

  <name>Cordova Keyri</name>
  <description>Cordova Keyri SDK Plugin</description>

  <license>MIT</license>

  <engines>
    <engine name="cordova" version=">=10.0.0"/>
    <engine name="cordova-android" version=">=9.0.0"/>
  </engines>

  <platform name="android">
      <framework src="com.keyri:keyrisdk:3.0.3"/>
      <framework src="com.google.code.gson:gson:2.9.0"/>
      <framework src="org.jetbrains.kotlin:kotlin-stdlib-jdk8:1.8.20"/>
      <framework src="org.jetbrains.kotlinx:kotlinx-coroutines-core:1.8.20"/>

    <source-file src="src/android/com/keyri/cordova/plugin/CordovaKeyri.kt" target-dir="java/org/apache/cordova/plugin/echo/"/>

    <config-file target="config.xml" parent="/*">
      <preference name="GradlePluginKotlinEnabled" value="true" />
        
      <feature name="CordovaKeyri">
        <param name="android-package" value="com.keyri.cordova.plugin.CordovaKeyri"/>
      </feature>
    </config-file>
  </platform>
  
</plugin>
